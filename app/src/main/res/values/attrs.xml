<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalRulerView">
        <!--//长线-->
        <attr name="longLine" format="dimension" />
        <!--//短线-->
        <attr name="shortLine" format="dimension" />
        <!--//数字大小-->
        <attr name="numSize" format="dimension" />
        <!--//目前数字大小-->
        <attr name="currentNumSize" format="dimension" />
        <!--左边距-->
        <attr name="leftSpacing" format="dimension" />
        <!--右边距-->
        <attr name="rightSpacing" format="dimension" />
        <!--数目-->
        <attr name="count" format="integer" />
        <!--间隔-->
        <attr name="spacing" format="dimension" />
        <!--顶部的直线-->
        <attr name="topLine" format="dimension" />
        <!--指针颜色-->
        <attr name="pointerWidth" format="dimension" />
        <!--//线条颜色-->
        <attr name="lineColor" format="color" />
        <!--//数字颜色-->
        <attr name="numColor" format="color" />
        <!--//刻度线颜色-->
        <attr name="pointerColor" format="color" />
        <!--//目前颜色-->
        <attr name="currentNumColor" format="color" />
    </declare-styleable>

</resources>